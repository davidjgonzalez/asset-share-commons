<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            cq:template="/conf/asset-share-commons/test/settings/wcm/templates/search-template"
            jcr:primaryType="cq:PageContent"
            jcr:title="Layout Toggle Component"
            sling:resourceType="asset-share-commons/components/structure/search-page">
        <root
                jcr:primaryType="nt:unstructured"
                sling:resourceType="asset-share-commons/components/structure/root">
            <rail
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/responsivegrid">
                <cq:responsive jcr:primaryType="nt:unstructured"/>
                <responsivegrid
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/foundation/components/responsivegrid">

                    <search-bar--with-placeholder-text
                            uiTestId="search-bar--with-placeholder-text"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="asset-share-commons/components/search/search-bar"
                            placeholder="What are you looking for?"
                            type="text">
                    </search-bar--with-placeholder-text>

                    <search-bar--without-placeholder-text
                            uiTestId="search-bar--without-placeholder-text"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="asset-share-commons/components/search/search-bar"
                            buttonLabel="Search"
                            type="text">
                    </search-bar--without-placeholder-text>


                    <search-bar--with-button-label
                            uiTestId="search-bar--with-button-label"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="asset-share-commons/components/search/search-bar"
                            buttonLabel="Search"
                            type="text">
                    </search-bar--with-button-label>

                    <search-bar--hide-button
                            uiTestId="search-bar--hide-button"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="asset-share-commons/components/search/search-bar"
                            hideButton="{Boolean}true"
                            type="text">
                    </search-bar--hide-button>

                </responsivegrid>
            </rail>
            <main
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/responsivegrid">
                <cq:responsive jcr:primaryType="nt:unstructured"/>
                <responsivegrid
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/foundation/components/responsivegrid">
                    <results
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="asset-share-commons/components/search/results"
                            cardResultResourceType="/apps/asset-share-commons/components/search/results/result/card"
                            guessTotal="{Long}4"
                            layout="card"
                            limit="{Long}2"
                            listResultResourceType="/apps/asset-share-commons/components/search/results/result/list"
                            loadMoreLabel="Load more"
                            missingImage="/content/dam/asset-share-commons/test/en/site/missing-thumbnail.jpg"
                            noResultsText="Your search did not match any assets."
                            orderBy="@jcr:content/jcr:lastModified"
                            orderBySort="desc"
                            paths="[/content/dam/asset-share-commons/test/en/pictures]"/>

                </responsivegrid>
            </main>
        </root>
        <config jcr:primaryType="nt:unstructured">
            <asset-details
                    jcr:primaryType="nt:unstructured"
                    defaultPath="/content/asset-share-commons/test/details"
                    placeholderPath="/content/dam/asset-share-commons/test/en/site/placeholder.jpeg"
                    selector="asset-type"/>
        </config>
    </jcr:content>
</jcr:root>
